<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/messages_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/plastic_scanned"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="80dp"
        android:textSize="17sp"/>

   <com.getbase.floatingactionbutton.FloatingActionsMenu
       android:id="@+id/flmenuSize"
       android:layout_width="10dp"
       android:layout_height="10dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:layout_marginBottom="25dp"
       android:layout_marginRight="30dp"
       app:fab_expandDirection="up">

       <Button
           android:id="@+id/btn_SizeS"
           android:textStyle="italic"
           android:layout_width="150dp"
           android:layout_height="80dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginBottom="30dp"
           android:text="S"
           android:elevation="10dp"/>

       <Button
           android:id="@+id/btn_SizeM"
           android:textStyle="italic"
           android:layout_width="150dp"
           android:layout_height="80dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginBottom="30dp"
           android:text="M"
           android:elevation="10dp"/>

       <Button
           android:id="@+id/btn_SizeL"
           android:textStyle="italic"
           android:layout_width="150dp"
           android:layout_height="80dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginBottom="30dp"
           android:text="L"
           android:elevation="10dp"/>

       <Button
           android:id="@+id/btn_SizeXL"
           android:textStyle="italic"
           android:layout_width="150dp"
           android:layout_height="80dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginBottom="30dp"
           android:text="XL"
           android:elevation="10dp"/>


   </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <Button
        android:id="@+id/btn_Scan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/textview_maximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messages_textView"
        android:layout_marginLeft="10dp"
        android:padding="20dp"
        android:text="Score_max"
        android:textSize="17sp"
        android:textStyle="italic"/>

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="450dp"
        android:layout_height="18dp"
        android:layout_below="@+id/textview_maximum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="265dp"
        android:rotation="-90" />

    <TextView
        android:id="@+id/textview_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="55dp"
        android:padding="20dp"
        android:text="Score"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:padding="20dp"
        android:text="Score_min"
        android:textSize="17sp"
        android:textStyle="italic"/>

</RelativeLayout>